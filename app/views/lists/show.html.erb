<h2><%= @list.name.capitalize %></h2>

<ul>
  <% @bookmarks.each do |bookmark| %>

    <li><p><%= bookmark.movie.title%></p>
    <p><%= bookmark.movie.rating%></p>
    <%= bookmark.movie.overview%></li>

    <%= link_to "Delete from the list",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>

<%= link_to lists_path do%>
  <p>Back to all lists</p>
<%end%>

<%= link_to new_bookmark_path do%>
  <p>Add a bookmark</p>
<%end%>

<%= link_to "Delete",
  list_path(@list),
  data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete this list?"}
%>
